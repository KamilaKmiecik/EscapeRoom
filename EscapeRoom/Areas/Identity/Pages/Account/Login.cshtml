@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj";
}
<style>
    body {
        background-color: #7743DB;
    }
</style>
<div class="container login-background">
    <div class="row">
            <div class="col-md-6 offset-md-3">
                <form id="account" method="post" class="card-body cardbody-color p-lg-5">                   
                        <div class="text-center">
                            <img src="~/zdjecia/ERlogo.png" class="img-fluid profile-image-pic rounded-circle my-3" width="200px" alt="profile">
                        </div>
                <h2 class="text-center text-dark mt-5">@ViewData["Title"]</h2>
                <hr />
                        <div class="mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-describedby="emailHelp" placeholder="User Name">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="text-center"><button id="login-submit" type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                        <div id="emailHelp" class="form-text text-center mb-5 text-dark">Nie masz konta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark fw-bold"> Zarejestruj się</a></div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
