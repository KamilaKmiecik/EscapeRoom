@page
@model RegisterModel
@{
    ViewData["Title"] = "Zarejestruj się";
}

<style>
    body {
        background-color: #7743DB;
    }
</style>
<div class="container login-background">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="cardbody-color p-lg-5">
                <div class="text-center">
                    <img src="~/zdjecia/ERlogo.png" class="img-fluid profile-image-pic rounded-circle my-3" width="200px" alt="profile">
                </div>
                <h2 class="text-center text-dark mt-5">@ViewData["Title"]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email">Adres Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email address">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password">Hasło</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="passowrd">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj się</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
