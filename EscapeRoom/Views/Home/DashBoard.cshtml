@{
    ViewBag.Title = "Dashboard";
}
<div class="container">
<h2 class="text-left">Rezerwacje</h2>
    <table class="table table-striped table-bordered table-dashboard">
    <thead class="thead">
        <tr>
            <th>Nazwa</th>
            <th>Początek rezerwacji</th>
            <th>Koniec rezerwacji</th>
            <th>Pokój</th>
            <th>Klient</th>
            <th>Liczba osób</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var reservation in ViewBag.Reservations)
            {
                if (reservation.Client != null)
                {
                    <tr>
                        <td>@reservation.Name</td>
                        <td>@reservation.ReservationStart</td>
                        <td>@reservation.ReservationEnd</td>
                        <td>@reservation.Room.RoomName</td>
                        <td>@reservation.Client.UserName</td>
                        <td>@reservation.NumberOfPeople</td>
                    </tr>
                }
            }
    </tbody>
</table>
</div>

<hr class="divider">

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-left">Pokoje:</h2>
            <ul class="list-group">
                @foreach (var room in ViewBag.Rooms)
                {
                    <li class="list-group-item">@room.RoomName</li>
                }
            </ul>
        </div>
        <div class="col-lg-6">
            <h2 class="text-left">Użytkownicy:</h2>
            <ul class="list-group">
                @foreach (var user in ViewBag.Users)
                {
                    <li class="list-group-item">@user.UserName</li>
                }
            </ul>
        </div>
    </div>
</div>