@{
    Layout = "_Layout";
}



<div class="container">
    <div class="room-selection">
        <h3>Dostępne Atrakcje:</h3>
        <label><input type="checkbox" name="selectedRooms" value="Pokój Tajemnic" checked>Pokój Tajemnic</label>
        <label><input type="checkbox" name="selectedRooms" value="Labirynt Złudzeń" checked>Labirynt Złudzeń</label>
        <label><input type="checkbox" name="selectedRooms" value="Kosmiczna Wyprawa" checked>Kosmiczna Wyprawa</label>
    </div>
</div>

<div class="container mt-5">
    <div class="row mt-3">
        <div class="col text-right">
            <button id="prevMonth" class="btn btn-primary lavender-btn">&lt;</button>
        </div>
        <div class="col-10 text-center">
            <h3 id="currentMonth"></h3>
        </div>
        <div class="col text-left">
            <button id="nextMonth" class="btn btn-primary lavender-btn">&gt;</button>
        </div>
    </div>
    <div class="row">
        <div class="col day-name" data-short-name="Pon">Poniedziałek</div>
        <div class="col day-name" data-short-name="Wt">Wtorek</div>
        <div class="col day-name" data-short-name="Śr">Środa</div>
        <div class="col day-name" data-short-name="Czw">Czwartek</div>
        <div class="col day-name" data-short-name="Pt">Piątek</div>
        <div class="col day-name" data-short-name="Sob">Sobota</div>
        <div class="col day-name" data-short-name="Niedz">Niedziela</div>
    </div>
    <div id="calendarRow"></div>
</div>


<script src="~/scripts/calendar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

